<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>

    <style name="MultilineEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:textSize">18dp</item>
        <item name="android:gravity">top</item>
        <item name="android:shadowColor">#f0f0f0</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SingleLineEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textSize">18dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SaveButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:translationZ">40dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
